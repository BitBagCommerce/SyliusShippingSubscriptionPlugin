{% set map = {
    '0': {'color': 'yellow', 'icon': 'clock'},
    '1': {'color': 'button primary', 'icon': 'check'}
} %}
<span class="ui label {{ map[data].color }}">
    <i class="icon {{ map[data].icon }}"></i>
    {% if data == 0 %}
        {{ 'bitbag_sylius_shipping_subscription.grid.disabled'|trans }}
    {% else %}
        {{ 'bitbag_sylius_shipping_subscription.grid.enabled'|trans }}
    {% endif %}
</span>
